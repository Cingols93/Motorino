<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration SYSTEM "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
	<session-factory>
		<property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
		<property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
		<property name="hibernate.connection.username">root</property>
		<property name="hibernate.connection.password">toor</property>
		<property name="hibernate.connection.url">jdbc:mysql://localhost:3306/motorino?useSSL=false</property>
		<property name="hibernate.hbm2ddl.auto">update</property>
		<property name="format_sql">true</property>
		<property name="show_sql">true</property>
		<mapping class="it.consoft.nameless.model.User"/>
		<mapping class="it.consoft.nameless.model.Moto"/>
		<mapping class="it.consoft.nameless.model.Componente"/>
		<mapping class="it.consoft.nameless.model.MotoComposta"/>
	</session-factory>
</hibernate-configuration>